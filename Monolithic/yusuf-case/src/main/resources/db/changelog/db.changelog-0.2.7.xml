<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="tevfikuykun" id="1" >

        <createTable tableName="city">
            <column name="id" type="${uuid_type}"/>
            <column name="name" type="varchar(255)"/>
        </createTable>

        <createTable tableName="county">
            <column name="id" type="${uuid_type}"/>
            <column name="name" type="varchar(255)"/>
            <column name="city_id" type="${uuid_type}"/>
        </createTable>

        <createTable tableName="street">
            <column name="id" type="${uuid_type}"/>
            <column name="name" type="varchar(255)"/>
            <column name="county_id" type="${uuid_type}"/>
        </createTable>

        <rollback>
            <dropTable tableName="city"/>
            <dropTable tableName="county"/>
            <dropTable tableName="street"/>
        </rollback>


    </changeSet>

</databaseChangeLog>