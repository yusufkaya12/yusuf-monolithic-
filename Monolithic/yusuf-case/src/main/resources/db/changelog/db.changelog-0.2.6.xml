<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="tevfikuykun" id="1" >

        <createTable tableName="favourites">
            <column name="id" type="${uuid_type}"/>
            <column name="user_id" type="${uuid_type}"/>
            <column name="advert_id" type="${uuid_type}"/>
            <column name="favourited_date" type="${timestamp_type}"/>
        </createTable>

        <rollback>
            <dropTable tableName="favourites"/>
        </rollback>


    </changeSet>

</databaseChangeLog>